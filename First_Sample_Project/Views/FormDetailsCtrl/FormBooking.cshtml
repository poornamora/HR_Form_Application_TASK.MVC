                    <input type="date" name="name" id="inputdate" required value="@Model?.DateofIncident?.ToString("yyyy-MM-dd")" readonly disabled="disabled" />
                        <div id="dateerror"></div>
                        <div id="dateicon"></div>
                    </div>

                    <div class="item">
                        <p>Time of Incident:</p>
                    <input type="time" name="name" id="inputtime" required value="@Model?.TimeofIncident" readonly disabled="disabled" />
                        <div id="timeerror"></div>
                        <div id="timeicon"></div>
                    </div>
                    <div class="item">
                        <p>Incident location:</p>
                    <textarea rows="3" id="inputlocationtextarea" readonly disabled="disabled">@Model?.IncidentLocation</textarea>
                    </div>
                    <div class="item">
                        <p>Please specify incident details:</p>
                    <textarea rows="5" id="incidenttextarea" readonly disabled="disabled">@Model?.Pleasespecifyincidentdetails</textarea>
                    </div>
                    <div class="item">
                        <p>Witness(es), if available:</p>
                    <textarea rows="5" id="avalibletextarea" readonly disabled="disabled">@Model?.Witnessifavailable</textarea>
                    </div>
                    <div class="item">
                        <p>Suggestions:</p>
                    <textarea rows="5" id="inputsuggestion" readonly disabled="disabled">@Model?.Suggestions</textarea>
                    </div>
                    <div class="item">
                        <p>Additional comment(s):</p>
                        <textarea rows="5" id="inputcomment" readonly disabled="disabled">@Model?.AdditionalComments</textarea>
                    </div>

                    <input type="hidden" name="mode" value="@ViewBag.Mode" id="mode" />

                </div>

            </body>
        </html>
    }

   

