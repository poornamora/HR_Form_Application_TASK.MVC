                    <input type="text" name="name" id="inputphone" value="@Model?.Phone" readonly disabled="disabled" />
                        <div id="phoneerror"></div>
                        <div id="phoneicon"></div>
                    </div>


                  

                    <div class="item col-sm-6">
                        <div class="country-item">
                            <p>Country:</p>
                            <select name="countryDropdown" id="CountryId" class="form-control" disabled="disabled">
                            <option value="@Model?.CountryId">@ViewBag.countryName</option>
                                
                            </select>
                        </div>
                    </div>

                @*City dropdownlist *@
                    <div class="item col-sm-6">
                        <p>City:</p>
                        <div class="city-item">
                        <select name="StateDropdown" id="CityId" class="form-control" disabled="disabled">
                            <option value="">@ViewBag.cityName</option>
                            </select>
                        </div>
                    </div>

                    <div class="item">
