        <!-- Custom CSS -->
        <link href="~/cdnfolder/cdnbootrap.css" rel="stylesheet">
        <link href="~/cdnfolder/jquerycdnbootrap.css" rel="stylesheet">
       

        <!-- Font Awesome Kit -->
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

        <!-- jQuery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

        <!-- jQuery Validation Plugin -->
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>


        <link rel="stylesheet" href="~/css/FileStyles/FileSystemstyles.css">
    </head>
    <body>
        <div class="container">
            <h3 class="heading">File Upload</h3>
            <div class="col-4">
                @* <form asp-action="FileUpload" asp-controller="Data" enctype="multipart/form-data" id="Fileform" > *@
            <div enctype="multipart/form-data" id="Fileform" method="post" >
                    <div class="mb-3">
                        <input type="file" name="file" class="form-control" id="fileinput" multiple />
                        <div id="error"></div>
                        <div id="icon"></div>
                        <div id="invalidfileformat"></div>
                    </div>
                    <span class="messagelabel"></span>

                    <div>
                        <input type="submit" value="Upload" class="btn btn-primary" id="btn-upload" />
                    </div>

                    <hr />

                    <div class="alert-success">
                        <span class="text-success">@TempData["Message"]</span>
                    </div>

                    

                  
                @* </form> *@
            </div>
        </div>
    </div>
    

    <div class="modal" id="popup-modal" tabindex="1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">File Upload Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>File already exists. Do you want to override it?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="override-yes">Override</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="override-no">Cancel</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="versiondetails">save with version</button>

                    <input type="hidden" id="submitType" value="" />
                </div>
            </div>
        </div>
    </div>

      
    </body>

</html>
